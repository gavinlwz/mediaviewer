<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"               
             xmlns:Loading="clr-namespace:MediaViewer.UserControls.Loading" xmlns:ImagePanel="clr-namespace:MediaViewer.UserControls.ImagePanel" x:Class="MediaViewer.ImagePanel.ImageView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="mainGrid">
        <ImagePanel:ImagePanelView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Location="{Binding Location}" ImageScaleMode="{Binding SelectedScaleMode}" 
                                   FlipX="{Binding FlipX}" FlipY="{Binding FlipY}" RotationDegrees="{Binding RotationDegrees}" PreviewMouseLeftButtonDown="imagePanel_PreviewMouseLeftButtonDown"/>
    </Grid>
</UserControl>
