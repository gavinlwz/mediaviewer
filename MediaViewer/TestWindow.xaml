<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ImagePanel="clr-namespace:MediaViewer.UserControls.ImagePanel" xmlns:TabbedExpander="clr-namespace:MediaViewer.UserControls.TabbedExpander" x:Class="MediaViewer.TestWindow"
        xmlns:mwt="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Classic"
        Title="TestWindow" Height="300" Width="300">
    <Grid>
        <TabbedExpander:TabbedExpanderView HorizontalAlignment="Left" Margin="97,78,0,0" VerticalAlignment="Top" IsExpanded="True">
            <TabbedExpander:TabbedExpanderTab IsSelected="True" TabName="Wombat" BorderThickness="2" Margin="5" BorderBrush="{x:Static mwt:ClassicBorderDecorator.ClassicBorderBrush}" BorderStyle="Etched">
                <Label Content="Wombat"/>
            </TabbedExpander:TabbedExpanderTab>
            <TabbedExpander:TabbedExpanderTab TabName="Tiger">
                <Label Content="Tiger"/>
            </TabbedExpander:TabbedExpanderTab>
        </TabbedExpander:TabbedExpanderView>
    </Grid>
</Window>
