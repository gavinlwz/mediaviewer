<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:NumberSpinner="clr-namespace:MediaViewer.UserControls.NumberSpinner" x:Class="MediaViewer.VideoPreviewImage.VideoPreviewImageView"
        Title="Create Video Preview Image(s)" Height="230" Width="450" Icon="/MediaViewer;component/Resources/Icons/preview.ico"
        ResizeMode="NoResize"
        Background="{StaticResource imageGridBackgroundColorBrush}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MediaViewer;component/Resources/Dictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type Label}" x:Key="labelStyle" BasedOn="{StaticResource baseLabelStyle}">
                <Setter Property="HorizontalAlignment" Value="Right"/>         
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>       
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Output Path" Style="{StaticResource labelStyle}"/>
        <ComboBox Grid.Row="0" x:Name="pathTextBox" Grid.Column="1" HorizontalAlignment="Stretch" Margin="0, 2, 21, 2"  VerticalAlignment="Top"                         
					Text="{Binding OutputPath, Mode=TwoWay}"
					ItemsSource="{Binding OutputPathHistory}"
					ToolTip="{Binding Location}"
					IsReadOnly="True" IsEditable="True"
                    Style="{StaticResource baseComboBoxStyle}"/>
        <Button Grid.Row="0" Grid.Column="1" Margin="2, 2, 0, 2" Width="20" Height="19"
					HorizontalAlignment="Right"					
					Command="{Binding DirectoryPickerCommand}"
					ToolTip="Change Directory">
            <Image Source="pack://application:,,,/Resources/Icons/folder_open.ico"/>
        </Button>
        <Label Grid.Row="1" Grid.Column="0" Content="Width (Pixels)" Style="{StaticResource labelStyle}"/>
        <NumberSpinner:IntegerSpinner Grid.Row="1" Grid.Column="1" Value="{Binding MaxPreviewImageWidth}" Max="8192" Min="32" VerticalAlignment="Center" TextAlignment="Left"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Nr Columns" Style="{StaticResource labelStyle}"/>
        <NumberSpinner:IntegerSpinner Grid.Row="2" Grid.Column="1" Value="{Binding NrColumns}" Max="64" Min="1" VerticalAlignment="Center" TextAlignment="Left"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Nr Rows" Style="{StaticResource labelStyle}"/>
        <NumberSpinner:IntegerSpinner Grid.Row="3" Grid.Column="1" Value="{Binding NrRows}" Max="512" Min="1" IsEnabled="{Binding IsNrRowsEnabled}" VerticalAlignment="Center" TextAlignment="Left"/>
        <CheckBox Grid.Row="3" Grid.Column="3" IsChecked="{Binding IsNrRowsEnabled}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2,2,2,2"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Interval (Sec)" Style="{StaticResource labelStyle}"/>
        <NumberSpinner:IntegerSpinner Grid.Row="4" Grid.Column="1" Value="{Binding CaptureIntervalSeconds}" Max="3600" Min="1" IsEnabled="{Binding IsCaptureIntervalSecondsEnabled}" VerticalAlignment="Center" TextAlignment="Left"/>
        <CheckBox Grid.Row="4" Grid.Column="2" IsChecked="{Binding IsCaptureIntervalSecondsEnabled}"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2,2,2,2"/>
        <Label Grid.Row="5" Grid.Column="0" Content="Add Tags" Style="{StaticResource labelStyle}"/>
        <CheckBox Grid.Row="5" Grid.Column="1" IsChecked="{Binding IsAddTags}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,2,2,2"/>
        <Label Grid.Row="6" Grid.Column="0" Content="Comment" Style="{StaticResource labelStyle}"/>
        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Comment}" Margin="0,2,0,2" IsEnabled="{Binding IsCommentEnabled}"/>
        <CheckBox Grid.Row="6" Grid.Column="2" IsChecked="{Binding IsCommentEnabled}"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2,2,2,2"/>
        <Button Grid.Row="7" Grid.ColumnSpan="3" Width="50" Content="Ok" Command="{Binding OkCommand}" HorizontalAlignment="Right" Margin="5,5,60,5"/>
        <Button Grid.Row="7" Grid.ColumnSpan="3" Width="50" Content="Cancel" Command="{Binding CancelCommand}" HorizontalAlignment="Right" Margin="5,5,5,5"/>
    </Grid>
</Window>
