<UserControl x:Name="mediaPreview" x:Class="MediaViewer.MediaPreview.MediaPreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="gridContainer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">    
        <Grid.Background>
            <SolidColorBrush Color="{Binding Path=BackgroundColor, ElementName=mediaPreview}"/>
        </Grid.Background>
        <Image x:Name="pictureBox" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform" SnapsToDevicePixels="True">
        </Image>
    </Grid>
</UserControl>
