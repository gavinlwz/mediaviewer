<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:NumberSpinner="clr-namespace:MediaViewer.UserControls.NumberSpinner" x:Class="MediaViewer.VideoPanel.VideoSettingsView" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MediaViewer;component/Resources/Dictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type Label}" x:Key="labelStyle" BasedOn="{StaticResource {x:Type Label}}">
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="{x:Type Label}" x:Key="labelHeaderStyle">
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Grid.Row="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="1" Content="Screenshot" Style="{StaticResource labelHeaderStyle}"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Browse Path" Style="{StaticResource labelStyle}"/>
        <RadioButton Grid.Row="1" Grid.Column="1" IsChecked="{Binding IsVideoScreenShotLocationCurrent}" GroupName="One" VerticalAlignment="Center"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Ask" Style="{StaticResource labelStyle}"/>
        <RadioButton Grid.Row="2" Grid.Column="1" IsChecked="{Binding IsVideoScreenShotLocationAsk}" GroupName="One" VerticalAlignment="Center"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Location" Style="{StaticResource labelStyle}"/>
        <RadioButton  Grid.Row="3" Grid.Column="1" GroupName="One" IsChecked="{Binding IsVideoScreenShotLocationFixed}" VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox Grid.Column="0" x:Name="pathTextBox"  HorizontalAlignment="Stretch" VerticalAlignment="Center"                          
			        Text="{Binding VideoScreenShotLocation, Mode=TwoWay}"
			        ItemsSource="{Binding VideoScreenShotLocationHistory}"
			        ToolTip="{Binding VideoScreenShotLocation}"
			        IsReadOnly="True" IsEditable="True"
			        />
                <Button Grid.Row="3" Grid.Column="1" Margin="2, 2, 0, 2" Width="20" Height="19"
			        HorizontalAlignment="Right"					
			        Command="{Binding DirectoryPickerCommand}"
			        ToolTip="Change Directory">
                    <Image Source="pack://application:,,,/MediaViewer;component/Resources/Icons/folder_open.ico"/>
                </Button>
            </Grid>
        </RadioButton>
        <Label Grid.Row="4" Grid.Column="0" Content="Offset (Sec)" Style="{StaticResource labelStyle}"/>
        <NumberSpinner:IntegerSpinner Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,5,5,5" Value="{Binding VideoScreenShotTimeOffset}"/>
    </Grid>
</UserControl>
