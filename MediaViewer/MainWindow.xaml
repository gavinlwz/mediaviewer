<Window x:Class="MediaViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MediaViewer" Height="350" Width="525">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="183*"/>
            <ColumnDefinition Width="319*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="270*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <DockPanel x:Name="TopDockPanel" HorizontalAlignment="Left" Height="39" LastChildFill="False" VerticalAlignment="Top" Margin="0,0,-0.333,0" Grid.ColumnSpan="3">
            <Menu Height="20" VerticalAlignment="Top" DockPanel.Dock="Top" HorizontalAlignment="Right" Margin="0,0,0.333,0" Width="{Binding Path=ActualWidth, ElementName=MainGrid}" HorizontalContentAlignment="Stretch">
                <MenuItem Header="_File">
                    <MenuItem x:Name="OpenMenuItem" Header="_Open" Click="OpenMenuItem_Click"/>
                    <Separator/>
                    <MenuItem x:Name="LogMenuItem" Header="_Log" Click="LogMenuItem_Click"></MenuItem>
                    <Separator/>
                    <MenuItem x:Name="ExitMenuItem" Header="_Exit" Click="ExitMenuItem_Click"></MenuItem>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem x:Name="AboutMenuItem" Header="_About" Click="AboutMenuItem_Click"/>
                </MenuItem>
            </Menu>

        </DockPanel>
        <DockPanel HorizontalAlignment="Left" Height="275" LastChildFill="False" Margin="0,44,-0.333,0" VerticalAlignment="Top" Width="519" Grid.RowSpan="2" Grid.ColumnSpan="3">
        </DockPanel>
    </Grid>
</Window>
