<Window x:Class="MediaViewer.Input.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputWindow" Height="95.025" Width="689.252" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="inputTextBox" Height="23" Margin="10,10,10,0" TextWrapping="Wrap" Text="{Binding Path=InputText}" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
        <Button x:Name="okButton" Content="Ok" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="75" Click="okButton_Click" IsDefault="True"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="90,38,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click" IsCancel="True"/>
        <Button x:Name="pasteButton" Content="Paste" HorizontalAlignment="Left" Margin="250,38,0,0" VerticalAlignment="Top" Width="75" Click="pasteButton_Click"/>
        <Button x:Name="copyButton" Content="Copy" HorizontalAlignment="Left" Margin="170,38,0,0" VerticalAlignment="Top" Width="75" Click="copyButton_Click"/>

    </Grid>
</Window>
