<Window x:Name="AboutWindow1" x:Class="MediaViewer.AboutView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="240" Width="320" ResizeMode="NoResize" Icon="/MediaViewer;component/Resources/Icons/birdsmall.ico">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MediaViewer;component/Resources/Dictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{StaticResource imageGridBackgroundColorBrush}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" Margin="0,40,0.667,0" VerticalAlignment="Top" TextWrapping="WrapWithOverflow" TextAlignment="Center" Height="39">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0}, v{1} ({2})">
                    <Binding Path="AssemblyInfo.Name"/>
                    <Binding Path="AssemblyInfo.Version"/>
                    <Binding Path="AssemblyInfo.ProcessorArchitecture"/>
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <Button x:Name="OkButton" Content="Ok" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="74" RenderTransformOrigin="0.461,0.4" HorizontalContentAlignment="Center" Click="OkButton_Click" Grid.Row="1"/>
        <Label Content="(C) 2013 IJC" HorizontalAlignment="Stretch" Margin="0,69,0.333,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
        <Image Name="aboutImage" HorizontalAlignment="Left" Height="48" Margin="133,92,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="56" Source="/MediaViewer;component/Resources/Icons/bird.ico" RenderTransformOrigin="0.45,0.5">
            <Image.RenderTransform>
                <RotateTransform x:Name="aboutImageTransform"/>
            </Image.RenderTransform>
            <Image.Triggers>
                <!-- Animates the rectangle's opacity. -->
                <EventTrigger RoutedEvent="Image.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="aboutImageTransform" Storyboard.TargetProperty="Angle" By="360.0" 
                        		RepeatBehavior="Forever" Duration="00:00:1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>
    </Grid>
</Window>
