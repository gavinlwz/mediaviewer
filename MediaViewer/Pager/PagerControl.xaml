<UserControl x:Name="pager" x:Class="MediaViewer.Pager.PagerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="25.333" Width="237.334">
    <Grid>
        <Button x:Name="beginButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Height="23" Click="beginButton_Click">
            <Image Source="pack://application:,,,/Resources/Icons/Button-Rewind.ico" ToolTip="First Page"/>
        </Button>
        <TextBox x:Name="currentPageTextBox" HorizontalAlignment="Left" Height="23" Margin="83,1,0,0" Text="{Binding Path=CurrentPage, ElementName=pager}" VerticalAlignment="Top" Width="32" TextAlignment="Center"/>
        <TextBox x:Name="totalPagesTextBox" HorizontalAlignment="Left" Height="23" Margin="122,1,0,0" Text="{Binding Path=TotalPages, ElementName=pager}" VerticalAlignment="Top" Width="32" TextAlignment="Center" IsReadOnly="True"/>
        <Button x:Name="prevButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Height="23" Margin="39,0,0,0" Click="prevButton_Click">
            <Image Source="pack://application:,,,/Resources/Icons/Button-Previous.ico" ToolTip="Previous Page"/>
        </Button>
        <Button x:Name="nextButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Height="23" Margin="159,1,0,0" Click="nextButton_Click">
            <Image Source="pack://application:,,,/Resources/Icons/Button-Next.ico" ToolTip="Next Page"/>
        </Button>
        <Button x:Name="endButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Height="23" Margin="198,1,0,0" Click="endButton_Click">
            <Image Source="pack://application:,,,/Resources/Icons/Button-Forward.ico" ToolTip="Last Page"/>
        </Button>

    </Grid>
</UserControl>
